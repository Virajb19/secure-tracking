  created_at  DateTime @default(now()) @db.Timestamp()

  @@index([task_id])
  @@index([user_id])
  @@map("agent_location_history")
}

// ============================================================
// EXAM CENTER TRACKER
// For Center Superintendents to track question paper events
// ============================================================

enum ExamTrackerEventType {
  TREASURY_ARRIVAL // CS at Treasury Office/Bank
  CUSTODIAN_HANDOVER // Receiving from Custodian
  OPENING_MORNING // Opening QP - Morning Shift
  PACKING_MORNING // Packing Answerbooks - Morning
  DELIVERY_MORNING // Post Office Delivery - Morning
  OPENING_AFTERNOON // Opening QP - Afternoon Shift
  PACKING_AFTERNOON // Packing Answerbooks - Afternoon
  DELIVERY_AFTERNOON // Post Office Delivery - Afternoon
}

// Exam Tracker Submission by Center Superintendent
model ExamTrackerEvent {
  id         String               @id @default(uuid()) @db.Uuid
  user_id    String               @db.Uuid // Center Superintendent
  school_id  String               @db.Uuid // Exam Center (School)
  event_type ExamTrackerEventType
  exam_date  DateTime             @db.Date // Date of exam
  shift      String?              @db.VarChar(20) // MORNING/AFTERNOON/GENERAL

  // Evidence
  image_url  String @db.Text
  image_hash String @db.VarChar(64)

  // Location
  latitude  Decimal @db.Decimal(10, 7)
  longitude Decimal @db.Decimal(10, 7)

  // Timestamps
  captured_at  DateTime @db.Timestamp() // When photo was taken
  submitted_at DateTime @default(now()) @db.Timestamp()

  // Status
  is_verified Boolean   @default(false)
  verified_by String?   @db.Uuid
  verified_at DateTime? @db.Timestamp()

  user   User   @relation("TrackerSubmitter", fields: [user_id], references: [id])
  school School @relation(fields: [school_id], references: [id])

  @@unique([user_id, school_id, event_type, exam_date])
  @@index([school_id])
  @@index([exam_date])
  @@map("exam_tracker_events")
}
