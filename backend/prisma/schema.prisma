  longitude  Decimal  @db.Decimal(10, 7)
  accuracy   Float?
  heading    Float?
  speed      Float?
  updated_at DateTime @default(now()) @db.Timestamp()

  user User @relation(fields: [user_id], references: [id])
  task Task @relation(fields: [task_id], references: [id])

  @@index([task_id])
  @@map("agent_current_locations")
}

